<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción para abrir el wizard -->
    <record id="project_task_line_import_wizard_action" model="ir.actions.act_window">
        <field name="name">Importar Insumos desde Excel</field>
        <field name="res_model">project.task.line.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Vista del formulario del wizard -->
    <record id="project_task_line_import_wizard_view_form" model="ir.ui.view">
        <field name="name">project.task.line.import.wizard.form</field>
        <field name="model">project.task.line.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Insumos desde Excel">
                <group>
                    <!-- El campo task_id ahora es invisible porque se rellena automáticamente -->
                    <field name="task_id" invisible="1"/>
                    <field name="excel_file" filename="excel_filename"/>
                    <field name="excel_filename" invisible="1"/>
                </group>
                <footer>
                    <button string="Importar" type="object" name="import_lines" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>