<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_task_line_import_wizard_action" model="ir.actions.act_window">
        <field name="name">project.task.line.import.wizard.view.form</field>
        <field name="res_model">project.task.line.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="project_task_line_import_wizard_view_form" model="ir.ui.view">
        <field name="name">project.task.line.import.wizard.view.form</field>
        <field name="model">project.task.line.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar insumos desde Excel">
                <group>
                    <field name="task_id"/>
                    <field name="file" filename="filename"/>
                </group>
                <footer>
                    <button string="Importar" type="object" name="import_lines" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
