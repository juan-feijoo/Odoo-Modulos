<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_custom_account_payment_register_form_inherit_issue_date" model="ir.ui.view">
        <field name="name">custom.account.payment.register.form.inherit.issue.date</field>
        <field name="model">custom.account.payment.register</field>
        <field name="inherit_id" ref="account-payment-group.view_custom_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_latam_check_payment_date']" position="before">
                <field name="l10n_latam_check_issue_date"
                       invisible="payment_method_code != 'new_third_party_checks'"
                       required="payment_method_code == 'new_third_party_checks'"/>
            </xpath>
        </field>
    </record>
</odoo>