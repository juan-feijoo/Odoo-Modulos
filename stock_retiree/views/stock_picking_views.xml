<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_picking_form_inherit_retirado_por" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit.retirado</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <!-- Usamos XPath para ubicar el campo de forma robusta.
                     Lo colocaremos justo despuÃ©s del campo 'partner_id' (Destinatario). -->
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="x_retirado_por_id"
                           invisible="company_id not in [2, 3]"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>