<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_line_detailed_operation_tree_inherit_origin" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.inherit.origin</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <!-- Usamos un ancla más robusta: el campo de Unidad de Medida.
                 Nuestro campo aparecerá justo después. -->
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field name="x_origin_document"/>
            </xpath>
        </field>
    </record>
</odoo>