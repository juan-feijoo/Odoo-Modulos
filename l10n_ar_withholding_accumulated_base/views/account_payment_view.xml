<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherit_accumulated_base" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.accumulated.base</field>
        <field name="model">account.payment</field>

        <field name="inherit_id" ref="l10n_ar_tax.view_account_payment_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//page[@name='withholdings_page_editable']//field[@name='l10n_ar_withholding_line_ids']/list/field[@name='name']" position="after">
                <!-- Agregamos el campo acumulado -->
                <field name="accumulated_base_amount" 
                       optional="show" 
                       readonly="1" 
                       force_save="1"/>
            </xpath>

        </field>
    </record>
</odoo>